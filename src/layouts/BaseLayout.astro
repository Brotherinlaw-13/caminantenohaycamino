---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const { title, description = "Crónica de un viaje de quince días por las islas Azores: São Miguel, Flores, Corvo y Terceira.", image, type = "website" } = Astro.props;
const siteUrl = "https://caminantenohaycamino.pages.dev";
const ogImage = image || "/images/azores-000-og.jpg";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content={type} />
  <meta property="og:image" content={`${siteUrl}${ogImage}`} />
  <meta property="og:locale" content="es_ES" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`} />
  
  <link rel="canonical" href={`${siteUrl}${Astro.url.pathname}`} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <style is:global>
    @import '../styles/global.css';
  </style>
</head>
<body>
  <header class="site-header">
    <h1><a href="/">5 días de otoño por las Azores</a></h1>
    <p class="subtitle">Crónica de un viaje de nueve amigos por cuatro islas del archipiélago</p>
  </header>
  
  <nav class="post-nav">
    <a href="/">Inicio</a>
    <a href="/san-miguel">São Miguel</a>
    <a href="/flores">Flores</a>
    <a href="/corvo">Corvo</a>
    <a href="/terceira">Terceira</a>
  </nav>
  
  <slot />
  
  <footer>
    <p>© 2025 · 5 días de otoño por las Azores · Un viaje de nueve amigos</p>
  </footer>
</body>
</html>
